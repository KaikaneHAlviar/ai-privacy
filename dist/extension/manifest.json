{
  "manifest_version": 3,
  "name": "PromptGuard",
  "description": "On-device protection against accidental sensitive-data leaks to AI chat tools.",
  "version": "0.1.0",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://www.perplexity.ai/*"
  ],
  "action": {
    "default_title": "Privacy Guard Analytics",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*"
      ],
      "js": ["content/interceptor.js"]
    }
  ],
  "background": {"service_worker": "background/storage.js"}
}