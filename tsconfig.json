{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ES2018"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,

    "rootDir": "extension",
    "outDir": "dist/extension",

    "types": ["chrome"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["extension/**/*"]
}