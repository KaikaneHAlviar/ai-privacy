{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ES2018"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "rootDir": ".",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["extension/**/*"]
}